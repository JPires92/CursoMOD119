    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, string> { { 0, "All" }, { 2, "2" }, { 3, "3" }, { 4, "4" } };
        pager.ShowPageSizes = true;
        pager.PagesToDisplay = 3;
